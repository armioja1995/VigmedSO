
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/Chart.min.js"></script>

<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Barra Mixta</h3>

                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="chart">
                        <canvas id="barChart" style="height:230px"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="box box-danger">
                <div class="box-header with-border">
                    <h3 class="box-title">Barra Simple</h3>
                    <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse">
                            <i class="fa fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i></button>
                    </div>
                </div>
                <div class="box-body">
                    <div class="chart">
                        <canvas id="bar_chart" style="height:230px"></canvas>
                    </div>
                </div>
                <script>
                    var cantidad = @Html.Raw(Json.Encode(ViewBag.Listas));
                    var sexos = @Html.Raw(Json.Encode(ViewBag.Sexos));
                    var ctx = $("#bar_chart");
                    var bacChart = new Chart(ctx,{

                        type:'bar' ,
                        data:{
                            labels:sexos,
                            datasets:[{
                                label:"Ejemplo de barras",
                                data:cantidad,
                                backgroundColor:["rgba(242,166,54,.5)","rgba(145,65,72,.5)"],
                                borderColor:["rgb(242,166,54)","rgb(145,65,72)"],
                                borderWidth:1
                            }]
                        },

                        options:{
                            maintainAspectRatio:false,
                            scales:{xAxes:[{ticks:{beginAtZero:true} }] },
                            legend:{display:true}
                        }
                    });
                </script>
            </div>
        </div>

    </div>
</section>
<script src="~/Content/plugins/chartjs/Chart.min.js"></script>
<script>
    var cantidad = @Html.Raw(Json.Encode(ViewBag.Listas));
    var cantidad_masc = @Html.Raw(Json.Encode(ViewBag.Msc));
    var cantidad_feme = @Html.Raw(Json.Encode(ViewBag.Fem));
    var sexos = @Html.Raw(Json.Encode(ViewBag.Sexos));
    $(function () {
        //- BARRAS JUNTAS -
        var barChartCanvas = $("#barChart").get(0).getContext("2d");
        var barChart = new Chart(barChartCanvas);
        var barChartData = {
            labels: sexos,
            datasets: [
              {
                  label: "Masculino",
                  fillColor: "rgba(210, 214, 222, 1)",
                  strokeColor: "rgba(210, 214, 222, 1)",
                  pointColor: "rgba(210, 214, 222, 1)",
                  pointStrokeColor: "#c1c7d1",
                  pointHighlightFill: "#fff",
                  pointHighlightStroke: "rgba(220,220,220,1)",
                  data: cantidad_masc
              },
              {
                  label: "Femenino",
                  fillColor: "rgba(60,141,188,0.9)",
                  strokeColor: "rgba(60,141,188,0.8)",
                  pointColor: "#3b8bba",
                  pointStrokeColor: "rgba(60,141,188,1)",
                  pointHighlightFill: "#fff",
                  pointHighlightStroke: "rgba(60,141,188,1)",
                  data: cantidad_feme
              }
            ]
        };
        
        barChartData.datasets[1].fillColor = "#00a65a";
        barChartData.datasets[1].strokeColor = "#00a65a";
        barChartData.datasets[1].pointColor = "#00a65a";
        var barChartOptions = {
            scaleBeginAtZero: true,
            scaleShowGridLines: true,
            scaleGridLineColor: "rgba(0,0,0,.05)",
            scaleGridLineWidth: 1,
            scaleShowHorizontalLines: true,
            scaleShowVerticalLines: true,
            barShowStroke: true,
            barStrokeWidth: 2,
            barValueSpacing: 5,
            barDatasetSpacing: 1,
            legendTemplate: "<ul class=\"<%=name.toLowerCase()%>-legend\"><% for (var i=0; i<datasets.length; i++){%><li><span style=\"background-color:<%=datasets[i].fillColor%>\"></span><%if(datasets[i].label){%><%=datasets[i].label%><%}%></li><%}%></ul>",

            responsive: true,
            maintainAspectRatio: true
        };

        barChartOptions.datasetFill = false;
        barChart.Bar(barChartData, barChartOptions);
    });
   
</script>