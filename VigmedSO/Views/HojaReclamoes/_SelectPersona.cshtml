
@model VigmedSO.Domain.person

<div class="clearfix" style="margin-bottom: 0px;"></div>
<div class="form-group">
    <label class="col-sm-2 control-label">Nombres :</label>
    <div class="col-md-5">
        @Html.EditorFor(model => model.v_FirstName + " " + model.v_FirstLastName + " " + model.v_SecondLastName, new { htmlAttributes = new { @class = "form-control", disabled = "disabled" } })
