                        </a>
                        <a href="/JustificacionTra/Edit/@item.v_IdHojaReclamo" class="btn btn-warning btn-xs">
                            <span class="glyphicon glyphicon-pencil"></span>
                        </a>
                        <a href="/JustificacionTra/Delete/@item.v_IdHojaReclamo" class="btn btn-danger btn-xs">
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

